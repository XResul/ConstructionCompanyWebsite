@model Insaat_MVC_WEB.Models.Entities.Slider

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin_Panel/Views/Shared/_Layout.cshtml";
}

<h2>Detaylar</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Resim
        </dt>

        <dd>
            <img src="@Model.ImageURL" style="max-width:70%;" />
            <hr />
            
        </dd>

        <dt>
            Başlık
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SliderTitle)
            <hr />

        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.MetaDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MetaDescription)
            <hr />

        </dd>

        <dt>
            Dil
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lang.Name)
            <hr />

        </dd>

    </dl>
</div>
<p>
    <a href="~/Admin_Panel/Slider/Edit/@Model.Id" class="btn btn-warning"><i class="fa fa-pencil"></i> Düzenle</a>
</p>
<hr />
<p>
    <a href="~/Admin_Panel/Slider/index" class="btn btn-default"><i class="fa fa-sign-out"></i> Listeye Dön</a>
</p>