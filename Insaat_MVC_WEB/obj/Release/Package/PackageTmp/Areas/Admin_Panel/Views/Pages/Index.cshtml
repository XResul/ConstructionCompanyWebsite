@model IEnumerable<Insaat_MVC_WEB.Models.Entities.Pages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin_Panel/Views/Shared/_Layout.cshtml";
}

<h2>Sayfalar</h2>

<p>
    <a href="~/Admin_Panel/Pages/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni</a>

</p>
<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            Sayfa Adı
        </th> 
        <th>
            Durum
        </th>
       
        <th>
            Kategori Adı
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.ImageURL" style="max-width:70%;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageName)
        </td>


        <td>
            @if (item.Status == true)
            {
                <div class="aktif"></div>
            }
            else
            {
                <div class="pasif"></div>
            }
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PageCategory.PageCategoryName)
        </td>
        <td>
            <a href="~/Admin_Panel/Pages/Edit/@item.Id" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
            <a href="~/Admin_Panel/Pages/Detail/@item.Id" class="btn btn-info"><i class="fa fa-info"></i></a>

        </td>
        <td>
            <a href="~/Admin_Panel/Pages/aktifYap/@item.Id" class="btn btn-success"> Aktif</a>

            <a href="~/Admin_Panel/Pages/pasifYap/@item.Id" class="btn btn-danger"> Pasif</a>

        </td>
        <td>
            <a href="~/Admin_Panel/PageImage/index/@item.Id" class="btn btn-info"><i class="fa fa-picture-o"></i></a>

        </td>
    </tr>
}

</table>
