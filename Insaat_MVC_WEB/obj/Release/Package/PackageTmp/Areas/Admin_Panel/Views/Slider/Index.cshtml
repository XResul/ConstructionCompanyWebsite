@model IEnumerable<Insaat_MVC_WEB.Models.Entities.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin_Panel/Views/Shared/_Layout.cshtml";
}

<h2>Slider Sayfası</h2>

<p>
    <a href="~/Admin_Panel/Slider/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni</a>
</p>
<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            Başlık
        </th>

     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.ImageURL" style="max-width:70%;"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SliderTitle)
        </td>

     
        <td>
            <a href="~/Admin_Panel/Slider/Edit/@item.Id" class="btn btn-warning"><i class="fa fa-pencil"></i> </a>
            <br />
            <br />
            <a href="~/Admin_Panel/Slider/Detail/@item.Id" class="btn btn-info"><i class="fa fa-info"></i> </a>
            <br />
            <br />

            <a href="~/Admin_Panel/Slider/Delete/@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> </a>
        </td>
    </tr>
}

</table>
