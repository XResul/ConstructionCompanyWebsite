@model IEnumerable<Insaat_MVC_WEB.Models.Entities.Testimonials>
<section class="testimonial-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Referanslarımız</span>
                    <h2>Müşterilerimiz Ne Diyor</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="testimonial-slider owl-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="ts-item">
                            <p>
                                @item.MetaDescription
                            </p>
                            <div class="ti-author">
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                </div>
                                <h5> - @item.Name</h5>
                            </div>
                        </div>
                         
                    }

                </div>
            </div>
        </div>
    </div>
</section>

