<footer class="footer-section">
    <div class="container">
        <div class="footer-text">
            <div class="row">
                <div class="col-lg-4">
                    <div class="ft-about">
                        <div class="logo">
                            <a href="@Insaat_MVC_WEB.Controllers.BaseController.RouteValue">
                                <img src="~/Content/sona-master/img/NOBLETREEE.png" alt=""> 
                            </a>
                        </div>
                        <br />
                       
                        <div class="fa-social">
                            @* SOSYAL MEDYA BİGİLERİ *@
                            <a href="@Model.social.Facebook" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="@Model.social.Twitter" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="@Model.social.Linkedin" target="_blank"><i class="fa fa-linkedin"></i></a>
                            <a href="@Model.social.Youtube" target="_blank"><i class="fa fa-youtube"></i></a>
                            <a href="@Model.social.Instagram" target="_blank"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 offset-lg-1">
                    <div class="ft-contact">
                        <h6>@Model.contact.Title</h6> @*null olan birşeyin title nasıl yazıca*@
                        @* İLETİŞİM BİLGİLERİ *@
                        <ul>
                            <li>
                                <a href="Tel:@Model.contact.Phone" style="text-decoration: none; color: #aaaab3; "> <i class="fa fa-phone"></i>  @Model.contact.Phone</a>

                            </li>
                            <li>

                                <a href="mailto:@Model.contact.Email" style=" text-decoration: none; color: #aaaab3;">
                                    <i class="fa fa-envelope"></i>
                                    @Model.contact.Email
                                </a>
                            </li>
                            <li><i class="fa fa-map-marker"></i> @Model.contact.Adres
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 offset-lg-1">
                    <div class="ft-newslatter">
                        <h6>@Resources.Default.Projelerimiz</h6>
                        @* SON 6 PROJEYİ LİSTELEYECEGİZ *@
                        <ul class="list-style ps-0">
                            @foreach (var item in Model.projects)
                            {
                                <li class="pb-3">
                                    <a href="~/Project/projectDetail/@item.Id" style="text-decoration:none;color:#aaaab3">

                                        @item.ProjectName
                                    </a>


                                </li>

                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright-option">
        <div class="container">
            <div class="row">
                @*<div class="col-lg-7">
