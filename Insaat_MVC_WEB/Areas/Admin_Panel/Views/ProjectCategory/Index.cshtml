@model IEnumerable<Insaat_MVC_WEB.Models.Entities.ProjectCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin_Panel/Views/Shared/_Layout.cshtml";
}

<h2>Proje Kategori</h2>

<p>
    <a href="~/Admin_Panel/ProjectCategory/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni</a>

</p>
<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            Kategori Adı
        </th>

 
        <th>
            Durum
        </th>
        <th>
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.ImageURL" style="max-width:70%;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>


        <td>
            @if (item.Status == true)
            {
                <div class="aktif"></div>
            }
            else
            {
                <div class="pasif"></div>
            }
        </td>

        <td>
            <a href="~/Admin_Panel/ProjectCategory/Edit/@item.Id" class="btn btn-warning"><i class="fa fa-pencil"></i> </a>
            <a href="~/Admin_Panel/ProjectCategory/Detail/@item.Id" class="btn btn-info"><i class="fa fa-info"></i> </a>

        </td>
        <td>

            <a href="~/Admin_Panel/ProjectCategory/pasifYap/@item.Id" class="btn btn-danger"> Pasif</a>

            <a href="~/Admin_Panel/ProjectCategory/aktifYap/@item.Id" class="btn btn-success"> Aktif</a>
        </td>
    </tr>
}

</table>
